<?xml version="1.0" encoding="utf-8"?>




<androidx.cardview.widget.CardView
    android:layout_width="160dp"
    android:layout_height="210dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="5dp"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/flower_image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_img" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flower_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Angle"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flower_name"
            android:id="@+id/flower_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="â‚¹576.00"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/flower_image"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/flower_name"
            android:background="@drawable/login_edit_button"
            android:src="@drawable/ic_baseline_add_24" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>